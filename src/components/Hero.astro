  <circle cx="706.5" cy="706.5" r="706.5" fill="url(#paint0_radial_3992_7422)" fill-opacity="0.85" />
  <defs>
    <radialGradient id="paint0_radial_3992_7422" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(706.5 706.5) rotate(90) scale(706.5)">
      <stop offset="0.315" stop-color="#FFF6EB" />
      <stop offset="1" stop-color="white" stop-opacity="0" />
